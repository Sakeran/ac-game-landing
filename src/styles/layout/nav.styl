@import "../colors.styl"

nav
  position: sticky;
  top: 0;
  left: 0;

  // background-color: $bg;

  .nav-toggle
    width: 100%;
    padding: 0.5rem;

    border: none;
    background: $bg;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateX(-1ch);


    font-family: "Titillium Web", sans-serif;
    font-size: 1.5rem;
    font-weight: 100;

    cursor: pointer;

    &:hover, &:focus
      color: $lightblue;

    & > * + *
      margin-left: 1rem;

    & svg
      transform: rotate(0deg);
      transition: transform 0.2s ease-in-out;

    ^[0].open .nav-toggle svg
      transform: rotate(90deg);

  ul
    text-transform: uppercase;
    list-style: none;
    overflow: hidden;

    background-color: transparent;
    transition: background-color 0.4s ease-in;
    transition-delay: 0.3s;
    pointer-events: none;

    position: absolute;
    width: 100%;
    left: 0;
    top: 3.3rem;

    padding-bottom: 0.125rem;

    ^[0].open ul
      background-color: $bg;
      transition: background-color 0.4s ease-out;
      pointer-events: all;

    li
      transform: translateX(100%);
      transition: transform 0.25s ease-in-out;

      ^[0].open li
        transform: translateX(0);

        for n in 1 2 3 4
          &:nth-child({n})
            transition-delay: 0.1s * (n - 1);

      for n in 1 2 3 4
        &:nth-child({n})
          transition-delay: 0.1s + (0.1s * (n - 1));

    a

      display: inline-block
      min-width: 100%;
      color: white;
      text-decoration: none;
      font-size: 1.25rem;
      font-weight: 100;

      padding: 0.25rem;
      padding-left: 1rem;
      margin-top: 0.125rem;

      background-image: linear-gradient(to right, hsl(205,66,29), 10ch, transparent);

      &:hover, &:focus
        background-image: linear-gradient(to right, hsl(205,66,29), 13ch, transparent);
        