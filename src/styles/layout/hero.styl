@import "../colors.styl"

.hero
  padding 4rem 0

  background: radial-gradient(farthest-side at 50% 5rem, hsla(213,99,84, 0.4), 20%, transparent 80%);

  @media screen and (min-width: 620px)
    padding: 6rem 0;

  h1
    position relative

    text-transform: uppercase;
    font-size: 3rem;
    color: transparent;

    background-color: #AFEBFE;
    background-image: linear-gradient(to bottom, #AFEBFE, white);
    background-clip: text;

    width: max-content;
    margin: 0 auto;
    min-height: 9rem;

    @media screen and (min-width: 620px)
      transform: scale(1.2);

    @media screen and (min-width: 820px)
      transform: scale(1.4);

    @media screen and (min-width: 1100px)
      transform: scale(1.6);

    &::before
      content: "Veritus Sigma"
      pointer-events: none;
      display: block;
      position: absolute;
      top: 3.25rem;
      
      color: transparent;
      background-color: lightblue;
      background-image: linear-gradient(to bottom, white, #AFEBFE);
      background-clip: text;

      transform: scaleY(-1);
      opacity 0.5;


    &::after
      content: "";
      display: block;
      height: 1px;
      width: 100%;
      background-color: $lightblue;

      position: relative;
      top: -0.75rem;

.hero-subtitle
  font-weight: 100;
  font-size: 1.3rem;
  text-align: center;
  text-transform: uppercase;
  margin: 0 auto;

  @media screen and (min-width: 620px)
    font-size: 1.8rem;
    margin-top: 3rem;