* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

@import "./colors.styl";

body {
  font-family: "Titillium Web", sans-serif;
  background-color: $bg;
  color: $bg-text;
}

h1, h2, h3 {
  font-weight: 100;
}

h2 {
  font-size: 4rem;
  text-align: center;
  color: $lightblue;

  margin: 2.5rem 0;
}

p
  max-width: 60ch

.image-display
  margin: 0 0.5rem;
  text-align: center;

  picture
    display: block;
    max-width: 100%;

  .image-bar > picture + picture
    margin-top: 0.5rem;

  .display-text
    margin: 1rem auto 2rem;
    font-size: 1.2rem;

@import "./layout/hero.styl"
@import "./layout/nav.styl"